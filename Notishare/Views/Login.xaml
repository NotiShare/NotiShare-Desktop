<Window x:Class="Notishare.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notishare.Views"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="auto" Width="auto">
        <TextBlock Text="Email" VerticalAlignment="Top" HorizontalAlignment="Stretch"  Margin="20, 10"></TextBlock>
        <TextBox VerticalAlignment="Top" HorizontalAlignment="Stretch"  Margin="20, 15"></TextBox>

        <TextBlock Text="Password" VerticalAlignment="Top" HorizontalAlignment="Stretch"  Margin="20, 20"></TextBlock>
        <TextBox VerticalAlignment="Top" HorizontalAlignment="Stretch"  Margin="20, 25"></TextBox>

        <Button Content="Register" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="20, 30"></Button>
    </StackPanel>
</Window>
