<Window x:Class="Notishare.Views.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notishare"
        mc:Ignorable="d"
        Title="RegistrationWindow" MaxHeight="600" MinHeight="600" MaxWidth="600" MinWidth="600" WindowStyle="ToolWindow">
    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="auto" Width="auto">
        <TextBlock Text="Email" VerticalAlignment="Top" HorizontalAlignment="Stretch"  Margin="20, 10"></TextBlock>
        <TextBox VerticalAlignment="Top" HorizontalAlignment="Stretch"  Margin="20, 15"></TextBox>

        <TextBlock Text="Password" VerticalAlignment="Top" HorizontalAlignment="Stretch"  Margin="20, 20"></TextBlock>
        <TextBox VerticalAlignment="Top" HorizontalAlignment="Stretch"  Margin="20, 25"></TextBox>
 
        <TextBlock Text="Repeat password" VerticalAlignment="Top" HorizontalAlignment="Stretch"  Margin="20, 30"></TextBlock>
        <TextBox VerticalAlignment="Top" HorizontalAlignment="Stretch"  Margin="20, 35"></TextBox>

        <Button Content="Register" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="20, 40"></Button>
    </StackPanel>
</Window>
